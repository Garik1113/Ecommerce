{
    "compilerOptions": {
      "downlevelIteration": true,
      "outDir": "build/dist",
      "module": "commonjs",
      "target": "es5",
      "lib": [
        "es6",
        "dom"
      ],
      "baseUrl": "./",
      "paths": {
        "*": ["*", "src/*"]
      },
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "moduleResolution": "node",
      "rootDir": "src",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "noUnusedParameters": true,
      "importHelpers": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
    },
    "exclude": [
      "node_modules",
      "build",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
      "src/setupTests.ts"
    ],
    "include": [
      "src/**/*",
    ]
  }